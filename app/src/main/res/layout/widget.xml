<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/HeaderTextAppearance"
        android:paddingLeft="@dimen/keyline"
        android:paddingStart="@dimen/keyline"
        android:paddingRight="@dimen/keyline"
        android:paddingEnd="@dimen/keyline"
        tools:text="Room 1" />

    <TextView
        android:id="@+id/room_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/keyline"
        android:paddingStart="@dimen/keyline"
        android:paddingRight="@dimen/keyline"
        android:paddingEnd="@dimen/keyline"
        tools:text="Android vs. iOS" />

    <ListView
        android:id="@+id/question_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_question" />
</LinearLayout>